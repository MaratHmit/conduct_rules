<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ProfileActivity">

    <include layout="@layout/toolbar_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_medium"
                android:paddingLeft="30dp"
                android:text="@string/label_user_name"
                android:textColor="@color/PrimaryBlack"
                android:textSize="18sp"></TextView>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_corner"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/manrope_regular"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:paddingRight="30dp"
                android:paddingBottom="12dp"
                android:text="@string/sample_user_name"
                android:textColor="@color/GrayText"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_medium"
                android:paddingLeft="30dp"
                android:text="@string/gender_2"
                android:textColor="@color/PrimaryBlack"
                android:textSize="18sp"></TextView>

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_corner"
                android:entries="@array/genderList"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/manrope_regular"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:paddingRight="30dp"
                android:paddingBottom="12dp"
                android:text="@string/sample_user_name"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_medium"
                android:paddingLeft="30dp"
                android:text="@string/language_2"
                android:textColor="@color/PrimaryBlack"
                android:textSize="18sp"></TextView>

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_corner"
                android:entries="@array/languageList"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/manrope_regular"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:paddingRight="30dp"
                android:paddingBottom="12dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_medium"
                android:paddingLeft="30dp"
                android:text="@string/practice_mode"
                android:textColor="@color/PrimaryBlack"
                android:textSize="18sp"></TextView>

            <Spinner
                android:id="@+id/spinnerMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_corner"
                android:entries="@array/modeList"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/manrope_regular"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:paddingRight="30dp"
                android:paddingBottom="12dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/manrope_medium"
                        android:paddingLeft="30dp"
                        android:text="@string/reminder"
                        android:textColor="@color/PrimaryBlack"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerReminder"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_corner"
                        android:entries="@array/reminderList"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/manrope_regular"
                        android:inputType="text"
                        android:paddingLeft="30dp"
                        android:paddingTop="12dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="12dp"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayoutReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:visibility="invisible"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/manrope_medium"
                        android:text="Время:"
                        android:paddingLeft="30dp"
                        android:textColor="@color/PrimaryBlack"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/editTextReminderTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_corner"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/manrope_regular"
                        android:inputType="text"
                        android:paddingLeft="30dp"
                        android:paddingTop="12dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="12dp"
                        android:text="21:00"
                        android:textColor="@color/GrayText"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</LinearLayout>