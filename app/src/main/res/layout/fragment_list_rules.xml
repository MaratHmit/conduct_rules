<?xml version="1.0" encoding="utf-8"?>
<ru.am.conduct_rules.sticky.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sticky_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    whatever:stuckShadowDrawable="@drawable/sticky_shadow_default">

    <LinearLayout
        android:id="@+id/fragment_list_rules"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:tag="sticky">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_base"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/button_base"
                    android:textAllCaps="false"
                    android:fontFamily="@font/manrope_regular"
                    android:textColor="@color/PrimaryBlack"
                    android:textSize="16sp"></Button>

                <Button
                    android:id="@+id/button_advanced"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"
                    android:color="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/button_advanced"
                    android:textAllCaps="false"
                    android:textColor="@color/PrimaryBlack"
                    android:fontFamily="@font/manrope_regular"
                    android:textSize="16sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cell_shape_corner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_info_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select5rules"
                    android:fontFamily="@font/manrope_regular"
                    android:textColor="@color/PrimaryBlack"
                    android:textSize="16sp" />


                <LinearLayout
                    android:id="@+id/ll_check_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <CheckBox
                        android:id="@+id/checkbox_rule1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:button="@drawable/checkbox_selector"
                        android:checked="true"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/checkbox_rule2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:button="@drawable/checkbox_selector"
                        android:checked="true"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/checkbox_rule3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:alpha="0.6"
                        android:background="#FFFFFF"
                        android:button="@drawable/checkbox_selector"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/checkbox_rule4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:alpha="0.6"
                        android:button="@drawable/checkbox_selector"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/checkbox_rule5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:button="@drawable/checkbox_selector"
                        android:enabled="false" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_list_rules_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_list_rules_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>


    </LinearLayout>

</ru.am.conduct_rules.sticky.StickyScrollView>