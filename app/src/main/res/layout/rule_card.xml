<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF7F26"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="540dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_code"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="#C3C3C3"
            android:gravity="center"
            android:text="@string/number_rule"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_rule"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:breakStrategy="simple"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/sample_str_rule"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">


                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@null"
                        android:onClick="onButtonUnCheckRuleClick"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/button_check_rule"
                        android:src="@drawable/ic_cancel_24"/>

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@null"
                        android:id="@+id/button_uncheck_rule"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:onClick="onButtonCheckRuleClick"
                        android:src="@drawable/ic_check_24"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>