<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_rule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/frame_corner"
    android:fontFamily="@font/jost"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="20dp">

    <View
        android:layout_width="30dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_unavailable_practice"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:text="@string/unavailable"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_in_practice"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/btn_delete_rule"
                android:text="@string/in_practice"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/btn_delete_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="10dp"
                android:layout_marginEnd="10dp"
                android:background="#FFFFFF"
                android:paddingTop="2dp"
                android:src="@drawable/button_close_rule" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_logo_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_transparent"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_number_rule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/jost"
                    android:text="@string/sample_rule_1"
                    android:textColor="@android:color/black"
                    android:textFontWeight="400"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_short_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/jost"
                    android:text="@string/sample_rule_short_name"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_out_practice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rule_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/jost"
                android:lineHeight="29sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:text="@string/sample_rule"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/button_selector_add"
                    android:drawableLeft="@drawable/baseline_add_24"
                    android:fontFamily="@font/jost"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:textSize="16dp"></Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/button_selector_orange"
                    android:fontFamily="@font/jost"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:text="@string/i_can_do_it"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"></Button>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/v_right"
        android:layout_width="30dp"
        android:layout_height="match_parent" />

</LinearLayout>