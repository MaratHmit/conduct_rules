<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ConductRules" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#517DA2</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#FF7235</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="colorControlActivated">@color/GrayText</item>
        <item name="android:textColor">@color/GrayText</item>
    </style>

    <style name="Theme.ConductRules.NoActionBar">
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="colorControlActivated">@color/GrayText</item>
        <item name="android:textColor">@color/GrayText</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/Green</item>
    </style>

    <style name="Theme.ConductRules.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ConductRules.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>